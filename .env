# Project name used in Traefik labels (router/service/middleware IDs)
PROJECT_NAME=striff
PROJECT_ENVIRONMENT=dev

# Domain routed via Traefik (must resolve to this host)
MAGENTO_HOST=striff.dcwmagento.dcw.dev

# Magento mode: developer or production
MAGENTO_MODE=production

# Custom images (set to your private registry tags)
NGINX_IMAGE=dcwdevops/nginx:latest
FPM_IMAGE=dcwdevops/dcwphp:8.3
MYSQL_IMAGE=dcwdevops/dcwmariadb:10.16
ELASTICSEARCH_IMAGE=dcwdevops/dcwelasticsearch:7.17
#REDIS_IMAGE=registry.example.com/magento/redis:latest

# Container names
NGINX_CONTAINER_NAME="$PROJECT_NAME-nginx"
FPM_CONTAINER_NAME="$PROJECT_NAME-fpm"
MYSQL_CONTAINER_NAME=magento-mysql
ELASTICSEARCH_CONTAINER_NAME=magento-elasticsearch
REDIS_CONTAINER_NAME=magento-redis

# Database settings
MAGENTO_DB_NAME=magento
MAGENTO_DB_USER=magento
MAGENTO_DB_PASSWORD=magpass
MAGENTO_DB_ROOT_PASSWORD=root_pass

# Redis settings
MAGENTO_REDIS_PASSWORD=redis_pass

# Optional PHP tuning (if your FPM image supports these)
PHP_MEMORY_LIMIT=2048M
PHP_MAX_EXECUTION_TIME=1800
PHP_UPLOAD_MAX_FILESIZE=64M

# Traefik label values
TRAEFIK_ENABLE=true
TRAEFIK_DOCKER_NETWORK=proxy
TRAEFIK_ENTRYPOINTS=websecure
TRAEFIK_ENABLE_TLS=true
TRAEFIK_CERT_RESOLVER=le
TRAEFIK_SERVICE_PORT=80
TRAEFIK_STS_SECONDS=31536000
TRAEFIK_STS_INCLUDE_SUBDOMAINS=true
TRAEFIK_STS_PRELOAD=true
